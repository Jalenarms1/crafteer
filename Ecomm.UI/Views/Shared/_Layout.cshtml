<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecomm.UI</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecomm.UI.styles.css" asp-append-version="true" />
</head>
<body>
    
    <div class="">
        <main role="main" class=" flex flex-col relative">
            <div class="flex flex-col font-serif w-full sticky top-0">
                <div class="max-w-full border border-solid border-zinc-200 px-20 bg-white flex justify-between items-center p-2">
                    <div class="flex items-end gap-1">
                        <img src="/assets/logo.jpg" class="w-12 h-12"/>
                        <div class="flex flex-col justify-end">
                            <p class="text-[20px]">Knots & Prints</p>
                            <p class="text-[10px] font-light">Dtf Printing and Custom Merchandise</p>
                        </div>

                    </div>
                    <div class="w-fit flex items-center gap-8">
                        <a class="cursor-pointer text-sm decoration-0">Shop</a>
                        <a class="cursor-pointer text-sm decoration-0">Design</a>
                        <a class="cursor-pointer text-sm decoration-0">Contact</a>
                        <a href="" class="bg-amber-900 px-4 py-2 text-white text-sm decoration-0  rounded-md">Sign up</a>
                    </div>
                </div>
            </div>
            <div class="flex flex-col max-w-full overflow-hidden">
                @RenderBody()
            
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
